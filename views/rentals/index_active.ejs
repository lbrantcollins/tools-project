<% include ../partials/header.ejs %>

<h1>Current Rentals</h1>

<section id="gallery">
   <div class="container">

   	<div class="row">
            <% for(let i = 0; i < rentals.length; i++) { %>
               <div class="col-lg-4 mb-4">
                  <div class="card">
                     <img class="card-img-top" src="<%=rentals[i].tool.url%>" alt="<%=rentals[i].tool.name%>">
                     <div class="card-body">
                        <h5 class="card-title"><%=rentals[i].tool.name%></h5>
                        <% const d = rentals[i].dueDate %>
                        <p class="card-text">Due Date: 
                        	<%= (d.getMonth() + 1) + "/" 
										+ d.getDate() + "/" + d.getFullYear()
									%>		
                        </p>
                        <p class=card-text><a href="/rentals/<%=rentals[i]._id%>">More info...</a></p>

                     </div>
               </div>
            </div>
         <%}%>
      </div>
   </div>
</section>

<ul>
	<% for(let i = 0; i < rentals.length; i++){ %>
		<li><a href="/rentals/<%=rentals._id%>"><%=rentals[i].tool.name%></a></li>
		<li>Rental Start Date: <%=rentals[i].startDate%>/day</li>
		<li>Due Date: <%=rentals[i].dueDate%>/day</li>
	<% } %>
</ul>

<% include ../partials/footer.ejs %>
