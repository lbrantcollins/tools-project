<% include ../partials/header.ejs %>

<p><a href="/admins">Return to Administrator's Home Page</a></p>

<section id="gallery">
   <div class="container">
   	<div class="row">
         <div class="col-lg-6 mb-6">
            <div class="card">
            	<div>
               <img class="card-img-top tool-image-show" src="<%=tool.url%>" alt="bittools logo">
               <div class="card-body">
                  <h3 class="card-title">Edit <%=tool.name%> Information</h3>
                  <form method="POST", action="/tools/<%=tool._id%>?_method=PUT">
                     <div class="form-group">
                        <label for="nameField">Name</label>
                        <input type="text" class="form-control" id="nameField" name="name" value="<%=tool.name%>">
                     </div>
                     <div class="form-group">
                        <label for="descriptionField">Description</label>
                        <textarea class="form-control" id="descriptionField" name="description" rows="6"><%=tool.description%></textarea>
                     </div>
                     <div class="form-group">
                        <label for="typeField">Category</label>
                        <input type="text" class="form-control" id="typeField" name="type" value="<%=tool.type%>">
                     </div>
                     <div class="form-group">
                        <label for="rentalCostField">Rental Fee</label>
                        <input type="text" class="form-control" id="rentalCostField" name="rentalCost" value="<%=tool.rentalCost%>">
                     </div>
                     <div class="form-group">
                        <label for="lateFeeField">Late Fee</label>
                        <input type="text" class="form-control" id="lateFeeField" name="lateFee" value="<%=tool.lateFee%>">
                     </div>
                     
                        <button type="submit" class="btn btn-dark">Submit</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>





<% include ../partials/footer.ejs %>
