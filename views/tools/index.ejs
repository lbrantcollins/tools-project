<% include ../partials/header.ejs %>

	<section id="gallery">
      <div class="container">

      	<div class="row">
               <% for(let i = 0; i < tools.length; i++) { %>
                  <div class="col-lg-4 mb-4">
                     <div class="card">
                        <img class="tool-image card-img-top" src="<%=tools[i].url%>" alt="<%=tools[i].name%>">
                        <div class="card-body">
                           <h5 class="card-title"><%=tools[i].name%></h5>
                           <p class="card-text">Rental Fee: <%=tools[i].rentalCost.toLocaleString("en-US", {style: "currency", currency: "USD", minimumFractionDigits: 2})%></p>
                           <p class=card-text><a href="/tools/<%=tools[i]._id%>">More info...</a></p>

                        </div>
                  </div>
               </div>
            <%}%>
         </div>
      </div>
   </section>



<% include ../partials/footer.ejs %>