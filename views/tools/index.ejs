<% include ../partials/header.ejs %>


	<section id="gallery">
      <div class="container">

   <% if (username === "admin") { %>
      <p><a href="/admins">Return to Administrator's Home Page</a></p>
   <% } %>
      	<div class="row">
               <% for(let i = 0; i < tools.length; i++) { %>
                  <div class="col-lg-4 mb-4">
                     <div class="card">
                        <div class="tool-image-div">
                           <img class="tool-image-index card-img-top" src="<%=tools[i].url%>" alt="<%=tools[i].name%>">
                        </div>
                        <div class="card-body">
                           <h5 class="card-title"><%=tools[i].name%></h5>
                           <p class="card-text">Rental Fee: <%=tools[i].rentalCost.toLocaleString("en-US", {style: "currency", currency: "USD", minimumFractionDigits: 2})%></p>
                           <% if (username === "admin") { %>
                              <p class=card-text><a href="/tools/<%=tools[i]._id%>/edit" class="btn btn-dark">Edit This Tool</a>
                           <% } else {%>
                              <p class=card-text><a href="/tools/<%=tools[i]._id%>">More info...</a></p>
                           <% } %>

                        </div>
                  </div>
               </div>
            <%}%>
         </div>
      </div>
   </section>



<% include ../partials/footer.ejs %>